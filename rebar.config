{erl_opts, [debug_info]}.
{deps, []}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{xref_checks, [fail_on_warning,
               undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls,
               deprecated_functions]}.

{dialyzer, [{warnings, [error_handling,
                        race_conditions,
                        unmatched_returns,
                        unknown,
                        no_improper_lists]}]}.
